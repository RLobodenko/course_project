{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
{% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
            <div class='mb-3'>
                <ul>
                    <li>
                        <a href='/login'>Person panel</a>
                    </li>
                    <li>
                        <a href='/kollections'>Collections</a>    
                    </li>
                </ul>
            </div>
{% else %}
              <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        

        <h1 class="h3 mb-3 font-weight-normal m-3">Please sign in</h1>
        <label for="username">Email</label>
        <input type="email" size="25" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
        <label for="password">Password</label>
        <input type="password" size="25" name="_password" id="password" class="form-control" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        

        <button class="btn btn-lg btn-primary m-3" type="submit">
            Sign in
        </button>
    </form>
{% endif %}
  
{% endblock %}
